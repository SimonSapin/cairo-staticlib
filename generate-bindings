#!/bin/sh
which bindgen > /dev/null 2>&1 || echo 'Try `cargo install bindgen`.'
bindgen src/cairo-all.h \
    --use-core \
    --ctypes-prefix ::libc \
    --no-layout-tests \
    --whitelist-function 'cairo_.*' \
    --whitelist-var 'CAIRO_.*' \
    --constified-enum '.*' \
    --no-prepend-enum-name \
    -o src/bindings.rs \
    -- \
    -I cairo-*/src \
    -I target/debug/build/cairo-static-sys-*/out/src \

